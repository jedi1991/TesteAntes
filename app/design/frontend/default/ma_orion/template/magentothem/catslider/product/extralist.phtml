<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>
<?php
    $_productCollection=$this->getLoadedProductCollection();
    $_helper = $this->helper('catalog/output');
?>
<?php if(!$_productCollection->count()): ?>
<p class="note-msg"><?php echo $this->__('There are no products matching the selection.') ?></p>
<?php else: ?>
<div class="category-products mage-producttabs">
    <?php echo $this->getToolbarHtml() ?>
    <?php // Grid Mode ?>

    <?php $_collectionSize = $_productCollection->count() ?>
    <?php $_columnCount = $this->getColumnCount(); ?>
    <?php $j=0; $time = $this->getPlayDelay(); ?>
    <?php $i=0; foreach ($_productCollection as $_product): ?>
        <?php $t = $j*$time; $t .='ms'; $j++; ?>
        <?php if ($i++%$_columnCount==0): ?>
        <ul class="products-grid row pdt-list zoomOut play">
        <?php endif ?>
            <li style="<?php echo "-webkit-animation-delay:$t;-moz-animation-delay:$t;-o-animation-delay:$t;animation-delay:$t" ?>;" class="col-md-3 col-sm-6 col-sms-6 col-smb-12 item<?php if(($i-1)%$_columnCount==0): ?> first<?php elseif($i%$_columnCount==0): ?> last<?php endif; ?> item-animate">
                <div class="item-container">
		    <div class="item-inner">
			<div class="item-inner-top">
			    <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(300); ?>" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" /></a>
			    <h2 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>"><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?></a></h2>
			    <?php if($this->getProductCfg('product_review')): ?>
				<?php //if($_product->getRatingSummary()): ?>
				<?php echo $this->getReviewsSummaryHtml($_product, 'short') ?>
				<?php //endif; ?>
			    <?php endif ?>
			    <?php echo $this->getPriceHtml($_product, true) ?>
			</div>
                        
			<div class="des-inbox">
			    <h2 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>"><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?></a></h2>
			    <?php if($this->getProductCfg('product_review')): ?>
				<?php //if($_product->getRatingSummary()): ?>
				<?php echo $this->getReviewsSummaryHtml($_product, 'short') ?>
				<?php //endif; ?>
			    <?php endif ?>
			    <?php echo $this->getPriceHtml($_product, true) ?>
			    
			    <?php $actionCfg = $this->getProductCfg('product_action');
			      if($actionCfg):   
			      $actions = explode(',', $actionCfg);
			?>
                            <div class="actions">
                       <?php if(in_array("cart", $actions)):?>
                            <?php if($_product->isSaleable()): ?>
                                <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
                            <?php else: ?>
                                <p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p>
                            <?php endif; ?>
                        <?php endif; ?>
                        
                            </div>
                        
			</div>
			
			<ul class="add-to-links">
                            <?php if(in_array("wishlist", $actions)):?>
                                <?php if ($this->helper('wishlist')->isAllow()) : ?>
                                    <li><a href="<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>" title="<?php echo $this->__('Add to Wishlist')?>" class="link-wishlist"><?php echo $this->__('Add to Wishlist') ?></a></li>
                                <?php endif; ?>
                            <?php endif; ?>
                            <?php if(in_array("compare", $actions)):?>
                                <?php if($_compareUrl=$this->getAddToCompareUrl($_product)): ?>
                                    <li><span class="separator">|</span> <a href="<?php echo $_compareUrl ?>" title="<?php echo $this->__('Add to Compare')?>" class="link-compare"><?php echo $this->__('Add to Compare') ?></a></li>
                                <?php endif; ?>
                            <?php endif; ?>
                        </ul>
			<?php endif ?>
                    </div>
		    
                    <?php
                            $newFromDate = Mage::getModel('catalog/product')->load($_product->getID())->getNewsFromDate();
                            $newToDate = Mage::getModel('catalog/product')->load($_product->getID())->getNewsToDate();                 
                            $now = date("Y-m-d H:m(worry)");
                            // Get the Special Price
                            $specialprice = Mage::getModel('catalog/product')->load($_product->getId())->getSpecialPrice(); 
                            // Get the Special Price FROM date
                            $specialPriceFromDate = Mage::getModel('catalog/product')->load($_product->getId())->getSpecialFromDate();
                            // Get the Special Price TO date
                            $specialPriceToDate = Mage::getModel('catalog/product')->load($_product->getId())->getSpecialToDate();
                            // Get Current date
                            if ($specialprice&&($specialPriceFromDate <= $now && $specialPriceToDate >= $now)&& Mage::getStoreConfig('themeoptions/themeoptions_config/sale_label')){
                                    echo "<span class='sale'></span>";
                                    }else{
                                    if($newFromDate <= $now && $newToDate >= $now && Mage::getStoreConfig('themeoptions/themeoptions_config/new_label') ) {
                                            echo "<span class='new'></span>";
                                            //echo $now.' -- '.$newsFrom.' -- '.$newsTo;
                                    }
                            }
                    ?>
                </div>
                
            </li>
        <?php if ($i%$_columnCount==0 || $i==$_collectionSize): ?>
        </ul>
        <?php endif ?>
        <?php endforeach ?>
        <script type="text/javascript">decorateGeneric($$('ul.products-grid'), ['odd','even','first','last'])</script>
</div>
<?php endif; ?>
